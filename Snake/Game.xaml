<Window x:Class="Snake.Game"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Snake"
        mc:Ignorable="d"
        Title="Game" Height="1080" Width="1980" ResizeMode="NoResize" WindowState="Maximized" WindowStyle="None" KeyUp="KeyIsReleased">
    <Grid>
        <Canvas x:Name="GameWorld" Margin="195,0,195,0"/>
        
        <Label Content="Score: 0" HorizontalAlignment="Left" Margin="36,36,0,0" 
               VerticalAlignment="Top" Height="44" Width="1702" FontSize="30" x:Name="Score"/>
    </Grid>
</Window>
